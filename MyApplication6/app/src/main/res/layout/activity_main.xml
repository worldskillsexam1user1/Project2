<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        android:alpha="0"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0">

        <com.aghajari.myapplication.CenterToMarginImageView
            android:id="@+id/ws"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/ws"/>

        <com.aghajari.myapplication.CenterToMarginImageView
            android:id="@+id/ws2"
            android:layout_gravity="center"
            android:layout_width="365dp"
            android:layout_height="88dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ws2"/>

        <com.aghajari.myapplication.CenterToMarginTextView
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:id="@+id/kerman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1783A6"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="-100dp"
            android:text="KERMAN"/>

        <com.aghajari.myapplication.CenterToMarginTextView
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1783A6"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="133dp"
            android:text="2022"/>

    </FrameLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="24dp"
        android:layout_marginRight="75dp"
        android:id="@+id/report_bg"
        app:srcCompat="@drawable/report"
        android:alpha="0"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:padding="12dp"
        android:id="@+id/report_ic"
        app:srcCompat="@drawable/report_icon"
        android:alpha="0"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="75dp"
        android:id="@+id/back"
        app:srcCompat="@drawable/back"
        android:alpha="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/options"
        android:gravity="center"
        android:orientation="vertical"
        android:alpha="0">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            android:textSize="30sp"
            android:textColor="#6297B8"
            android:text="Select date ..."
            android:gravity="center"
            android:layout_width="455dp"
            android:layout_height="77dp"
            android:background="@drawable/gradient"/>

        <FrameLayout
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/field"
                android:textSize="30sp"
                android:textColor="#6297B8"
                android:text="Select field ..."
                android:gravity="center"
                android:layout_width="455dp"
                android:layout_height="77dp"
                android:background="@drawable/gradient"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="16dp"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:id="@+id/img"
                    android:layout_gravity="center_vertical"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/field2"
                    android:textSize="30sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#0367A5"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="35dp"
            android:id="@+id/users"
            android:textSize="30sp"
            android:textColor="#6297B8"
            android:text="Select users ..."
            android:gravity="center"
            android:layout_width="455dp"
            android:layout_height="77dp"
            android:background="@drawable/gradient"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="43dp"
            android:id="@+id/start"
            android:gravity="center"
            android:layout_width="455dp"
            android:layout_height="77dp"
            android:background="@drawable/start"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="124dp"
        android:layout_marginHorizontal="100dp"
        android:orientation="horizontal"
        android:id="@+id/main"
        android:visibility="gone"
        android:alpha="0">

        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginLeft="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/circle"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginLeft="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:id="@+id/field_img"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field_tv"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="80dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/rv_users"
                android:background="@drawable/dialog2"
                app:spanCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
        </FrameLayout>

        <FrameLayout
            android:layout_marginLeft="24dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:id="@+id/hour"
                    android:text="00"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#0367A5"
                    android:textSize="25sp"
                    android:background="@drawable/tb"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="71dp"
                    android:gravity="center"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:id="@+id/minute"
                    android:text="00"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#0367A5"
                    android:textSize="25sp"
                    android:background="@drawable/tb"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="71dp"
                    android:gravity="center"
                    android:text=":"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:id="@+id/sec"
                    android:text="00"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#0367A5"
                    android:textSize="25sp"
                    android:background="@drawable/tb"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="25dp"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:gravity="center"
                    android:id="@+id/start_stop"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:background="@drawable/start_timer"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="35dp"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:gravity="center"
                    android:id="@+id/ref"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:background="@drawable/ref"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="90dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/rv_users_timer"
                android:background="@drawable/dialog3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </FrameLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="80dp"
        android:id="@+id/report_page"
        android:visibility="gone">

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="660dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog4"
            android:padding="8dp">

            <FrameLayout
                android:id="@+id/tab1_c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Over all"
                    android:textStyle="bold"
                    android:textColor="#A8CADF"
                    android:textSize="30sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tab1"
                    android:text="Over all"
                    android:textStyle="bold"
                    android:textColor="#0367A5"
                    android:textSize="30sp"
                    android:background="@drawable/dialog6"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab2_c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Best record"
                    android:textStyle="bold"
                    android:textColor="#A8CADF"
                    android:textSize="30sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/tab2"
                    android:text="Best record"
                    android:textStyle="bold"
                    android:textColor="#0367A5"
                    android:textSize="30sp"
                    android:background="@drawable/dialog6"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>
        
        
        <FrameLayout
            android:layout_marginTop="124dp"
            android:layout_marginHorizontal="56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog5">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tab1_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/options_tab1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/date2"
                        android:textSize="30sp"
                        android:textColor="#6297B8"
                        android:text="Select date range ..."
                        android:gravity="center"
                        android:layout_width="455dp"
                        android:layout_height="77dp"
                        android:background="@drawable/gradient"/>

                    <FrameLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/field3"
                            android:textSize="30sp"
                            android:textColor="#6297B8"
                            android:text="Select field ..."
                            android:gravity="center"
                            android:layout_width="455dp"
                            android:layout_height="77dp"
                            android:background="@drawable/gradient"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_marginLeft="16dp"
                                android:layout_width="32dp"
                                android:layout_height="40dp"
                                android:id="@+id/img2"
                                android:layout_gravity="center_vertical"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/field4"
                                android:textSize="30sp"
                                android:layout_marginLeft="8dp"
                                android:textColor="#0367A5"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>
                        </LinearLayout>


                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="30dp"
                        android:id="@+id/users2"
                        android:textSize="30sp"
                        android:textColor="#6297B8"
                        android:text="Select users ..."
                        android:gravity="center"
                        android:layout_width="455dp"
                        android:layout_height="77dp"
                        android:background="@drawable/gradient"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="35dp"
                        android:id="@+id/show"
                        android:gravity="center"
                        android:layout_width="455dp"
                        android:layout_height="77dp"
                        android:background="@drawable/show"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/result_tab1"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="248dp"
                        android:layout_height="50dp"
                        android:background="@drawable/head2"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/back_tab1"
                        android:layout_width="83dp"
                        android:layout_height="50dp"
                        android:background="@drawable/back2"/>

                    <LinearLayout
                        android:layout_marginTop="85dp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:gravity="top|end"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00 : 12 : 00"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00 : 09 : 00"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00 : 06 : 00"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginTop="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00 : 03 : 00"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="80dp"
                        android:layout_marginLeft="250dp"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="100dp"
                        android:background="@color/white"/>

                    <View
                        android:layout_marginLeft="250dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="100dp"
                        android:layout_marginRight="86dp"
                        android:layout_gravity="bottom"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:layout_marginLeft="250dp"
                        android:layout_marginTop="350dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="9"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="80dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>
                    </LinearLayout>


                </FrameLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tab2_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/options_tab2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/field5"
                            android:textSize="30sp"
                            android:textColor="#6297B8"
                            android:text="Select field ..."
                            android:gravity="center"
                            android:layout_width="455dp"
                            android:layout_height="77dp"
                            android:background="@drawable/gradient"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_marginLeft="16dp"
                                android:layout_width="32dp"
                                android:layout_height="40dp"
                                android:id="@+id/img3"
                                android:layout_gravity="center_vertical"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/field6"
                                android:textSize="30sp"
                                android:layout_marginLeft="8dp"
                                android:textColor="#0367A5"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"/>
                        </LinearLayout>


                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="35dp"
                        android:id="@+id/show2"
                        android:gravity="center"
                        android:layout_width="455dp"
                        android:layout_height="77dp"
                        android:background="@drawable/show"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/result_tab2"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_width="248dp"
                        android:layout_height="50dp"
                        android:background="@drawable/head2"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/back_tab2"
                        android:layout_width="83dp"
                        android:layout_height="50dp"
                        android:background="@drawable/back2"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="62dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </FrameLayout>

            </FrameLayout>

        </FrameLayout>
    </FrameLayout>
</FrameLayout>